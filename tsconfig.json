{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["ESNext"],
    "baseUrl": ".",
    "outDir": "dist",
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "noUncheckedIndexedAccess": true,
    "moduleDetection": "force",
    "declaration": true,
    "strict": true
  },
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
